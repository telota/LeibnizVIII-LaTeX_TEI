      </figure><p xml:id="Ch92.p5">Eodem
<app type="Bfootnote"><lem type="main">tempore dum brachium <formula xml:id="Ch92.p5.m1"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mi>B</m:mi></m:math></formula> descendit in <formula xml:id="Ch92.p5.m2"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mrow><m:mo stretchy="false">(</m:mo><m:mi>B</m:mi><m:mo stretchy="false">)</m:mo></m:mrow></m:math></formula></lem><note type="lemma-abbrev">tempore</note><rdg wit="#L" n="1"> spira ponderis <formula xml:id="Ch92.p5.m3"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mi>H</m:mi></m:math></formula> contra brachium <formula xml:id="Ch92.p5.m4"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mrow><m:mi>A</m:mi><m:mo>⁢</m:mo><m:mi>C</m:mi></m:mrow></m:math></formula> nitens </rdg><rdg wit="#L" n="2"> dum <seg type="apparat-ellipsis"/> in <formula xml:id="Ch92.p5.m5"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mrow><m:mo stretchy="false">(</m:mo><m:mi>B</m:mi><m:mo stretchy="false">)</m:mo></m:mrow></m:math></formula> <hi rendition="#i">L</hi></rdg></app>
<app type="Bfootnote"><lem type="main">brachium<index indexName="Sachverzeichnis"><term>brachium</term></index> <formula xml:id="Ch92.p5.m6"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mi>A</m:mi></m:math></formula> ascendet ad <formula xml:id="Ch92.p5.m7"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mrow><m:mo stretchy="false">(</m:mo><m:mi>A</m:mi><m:mo stretchy="false">)</m:mo></m:mrow></m:math></formula></lem><note type="lemma-abbrev">brachium <formula xml:id="Ch92.p5.m8"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mi>A</m:mi></m:math></formula></note><rdg wit="#L" n="1"> descendet in <formula xml:id="Ch92.p5.m9"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mi>A</m:mi></m:math></formula> </rdg><rdg wit="#L" n="2"> ascendet ad <formula xml:id="Ch92.p5.m10"><m:math xmlns:m="http://www.w3.org/1998/Math/MathML" display="inline"><m:mrow><m:mo stretchy="false">(</m:mo><m:mi>A</m:mi><m:mo stretchy="false">)</m:mo></m:mrow></m:math></formula> <hi rendition="#i">L</hi></rdg></app>
